{% extends "base.xml" %}
{% load static %}
{% block header %}
<image style="appbar-gym-logo" source="{% static 'gym/example-logo.png' %}"/>
<text style="appbar-headline-centered">Feed</text>
{% endblock %}

{% block content %}
<list trigger="refresh" action="replace-inner" href="{% url 'feed-page' 1 %}">
    <item
        style="spinner"
        key="load-more"
        trigger="visible"
        once="true"
        href="{% url 'feed-page' next %}"
        action="replace"
    >
        <spinner/>
    </item>
</list>
{% endblock %}
{% block footer %}\
  {% include "navbar.xml" with selected_tab="feed" %}
{% endblock %}
