{% load static %}
<items xmlns="https://hyperview.org/hyperview">
  {% for notification in page %}
    <item key="{{ notification.id }}" style="notification-item">
        <view style="notification-item-left">
            <image 
              source="{% static "icons" %}/{{ notification.level }}.png"
              style="notification-item-icon"
            />
            <view style="notification-item-left-labels">
              <text style="notification-item-verb">{{ notification.verb }}</text>
              <text style="notification-item-description">{{ notification.description }}</text>
            </view>
        </view>
        <view style="notification-item-right">
            <text style="notification-item-time">{{ notification.time_since }}</text>
        </view>
    </item>
{% endfor %}
{% if page.has_next %}
    <item
        style="spinner"
        key="load-more"
        trigger="visible"
        once="true"
        href="{% url 'feed-page' next %}"
        action="replace"
    >
        <spinner/>
    </item>
{% endif %}
</items>