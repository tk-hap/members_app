{% extends "base.xml" %}
{% load static %}
{% block header %}
<image style="appbar-gym-logo" source="{% static 'gym/example-logo.png' %}"/> <!-- TODO: Get Gym Logo from gym model?-->
<text style="appbar-headline-centered">Home</text> 
{% endblock %}
{% block content %}
<text style="label-bold">Featured Workouts</text>
<view style="featured-class-list">
  <list key="featured-workouts" scroll-orientation="horizontal">
    {% for workout in featured_workouts %}
      <item key="{{ workout.id }}">
        <view style="content-card-elevated featured-classes">
          <text style="title-medium">{{ workout.name }}</text>
          <view style="workout-details">
            <view style="workout-details-item">
              <image style="icon-small" source="{% static 'icons/' %}{{ workout.difficulty }}-bar.png"/>
              <text style="item-supporting-text">{{ workout.difficulty}}</text>
            </view>
            <view style="workout-details-item">
              <image style="icon-small" source="{% static 'icons/schedule.png' %}"/>
              <text style="item-supporting-text">{{ workout.duration }}</text>
            </view>
          </view>
        </view>
      </item>
    {% endfor %}
  </list>
</view>
<text style="label-bold">My Bookings</text>
<list key="my-bookings">
  {% for booking in class_bookings %}
    <item key="{{ booking.id }}">
      <view style="content-card-elevated">
        <text style="title-medium">{{ booking.event.name }}</text>
        <text style="body-medium">{{ booking.scheduled_date }}</text>
      </view>
    </item>
  {% endfor %}
</list>
{% endblock %}
{% block footer %}
  {% include "navbar.xml" with selected_tab="home" %}
{% endblock %}