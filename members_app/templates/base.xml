<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>{% include "styles.xml" %}</styles>
    <body id="base-body" style="body" safe-area="true">
      <header style="header">
        {% block header %}{% endblock %}
      </header>
      <view id="base-view" style="main">
        {% block content %}{% endblock %}
      </view>
      {% block body %}{% endblock %}
    </body>
  </screen>
</doc>
