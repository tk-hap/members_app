<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      {% include "styles.xml" %}
      {% block styles %}
      {% endblock %}
    </styles>
    <body id="base-body" style="body" safe-area="true">
      <header style="header-container">
        {% block header %}{% endblock %}
      </header>
      <view id="base-view" style="main">
        {% block content %}{% endblock %}
      </view>
      {% block footer %}{% endblock %}
    </body>
  </screen>
</doc>
